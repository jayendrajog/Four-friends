  <script>
    $( function() {
      $('td').click(function() {
        $(this).toggleClass("selected-cell");

        if ($('.selected-cell').length >= 1) {
          $('.btn-success').css({ opacity: 1 });
        }
        else {
          $('.btn-success').css({ opacity: 0 });
        }
        
